<!doctype html>
<html lang="en">
  <head>
    <%= erb :analytics if settings.production? %>
    <title>Lodestone Updates</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="images/favicon.ico">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <div class="container">
      <% @flash&.each do |type, message| %>
        <div class="alert alert-<%= type %> mt-2" role="alert">
          <%= message %>
        </div>
      <% end %>

      <h2 class="text-center mt-2">Automatic Lodestone updates for your Discord server!</h2>

      <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
          <%= erb :form %>
        </div>
      </div>

      <% unless @code %>
        <div class="row mt-4">
          <div class="col-md-8 offset-md-2">
            <%= erb :faq %>
          </div>
        </div>
      <% end %>

    </div>

    <div class="footer text-center">
      Created by Raelys Skyborn of Behemoth | lodestone@raelys.com
    </div>
  </body>
</html>
